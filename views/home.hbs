            <style>
                
                .grid-container {
                width: 95%;
                max-width: 1200px;
                margin: 0 auto;
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                grid-gap: 1em;
                
                @media (min-width: 52em) {
                    grid-template-columns: repeat(auto-fit, minmax(15em, 1fr));
  }
}

