                    <div class="grid-container">
                        {{#each books}}
                        <div class="card h-10">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="{{this.cphoto}}" alt="..." />
                            
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{this.title}}</h5>
                                    <!-- Product price-->
                                    
                                    <p>{{this.uname}}</p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/books/{{this.id}}">Detailed view </a></div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
